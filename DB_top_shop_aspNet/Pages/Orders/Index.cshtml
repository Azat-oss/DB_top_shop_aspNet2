@page
@model DB_top_shop_aspNet.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Заказы</h2>
<p><a asp-page="Create" class="btn btn-primary">Добавить заказ</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Клиент</th>
            <th>Продукт</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>@(item.Date?.ToString("dd.MM.yyyy") ?? "—")</td>
                <td>@item.Client?.Name</td>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Index" class="btn btn-secondary">← На главную</a>
