@page
@model DB_top_shop_aspNet.Pages.Clients.IndexModel
@{
	ViewData["Title"] = "Клиенты";
}
<h2>Клиенты</h2>

@if (User.IsInRole("Admin"))
{
    <p><a asp-page="Create" class="btn btn-primary">Добавить</a></p>
}

else if (!User.Identity.IsAuthenticated)
{
    <div class="alert alert-warning">Войдите как Администратор для управления клиентами.</div>
}



<table class="table">
    <thead><tr><th>Email</th><th>Действие</th></tr></thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                    }

                    else if (User.IsInRole("Manager"))
                    {
                        <span class="text-muted">Только просмотр</span>
                        
                    }

                    @* <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="/Index" class="btn btn-secondary">← На главную</a>